<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFE4EA"
    tools:context=".TelaCadastro6">


    <TextView
        android:id="@+id/editText"
        android:layout_width="415dp"
        android:layout_height="70dp"
        android:background="@drawable/custom_telas_cadastro"
        android:text="Tela Cadastro"
        android:paddingLeft="155dp"
        android:paddingTop="15dp"
        android:textSize="17sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Text2"
        android:layout_width="415dp"
        android:layout_height="70dp"
        android:drawablePadding="12dp"
        android:ems="10"
        android:paddingLeft="195dp"
        android:paddingTop="5dp"
        android:text="6/7"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.050000012" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Possui alguma..."
        android:textAlignment="center"
        android:textColor="#2F3542"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.23000002" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intolerância ?"
        android:textAlignment="center"
        android:textColor="#2F3542"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35000002" />


    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.43">

        <CheckBox
            android:id="@+id/checkedLactose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/radio_seletor"
            android:button="@drawable/ic_sem_lactose"
            android:buttonTint="#2F3542"
            android:padding="16dp"
            android:text="Lactose"
            android:textColor="#2F3542" />


        <CheckBox
            android:id="@+id/checkedGluten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/radio_seletor"
            android:button="@drawable/ic_sem_gluten"
            android:buttonTint="#2F3542"
            android:padding="16dp"
            android:text="Glúten"
            android:textColor="#2F3542" />

    </RadioGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doença ?"
        android:textAlignment="center"
        android:textColor="#2F3542"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.57" />


    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.66999996">

        <CheckBox
            android:id="@+id/checkedDiabetes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/radio_seletor"
            android:button="@drawable/ic_diabetes"
            android:buttonTint="#2F3542"
            android:padding="16dp"
            android:text="Diabetes"
            android:textColor="#2F3542" />


        <CheckBox
            android:id="@+id/checkedColesterol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/radio_seletor"
            android:button="@drawable/ic_colesterol"
            android:buttonTint="#2F3542"
            android:padding="16dp"
            android:text="Colesterol"
            android:textColor="#2F3542" />

    </RadioGroup>

    <Button
        android:id="@+id/buttonProximo6"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/button_login"
        android:onClick="IrTela7"
        android:text="Próximo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.81" />


</androidx.constraintlayout.widget.ConstraintLayout>